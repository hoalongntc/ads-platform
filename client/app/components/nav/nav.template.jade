nav.site-navbar.navbar.navbar-default.navbar-fixed-top.navbar-mega(role='navigation')
  .navbar-header
    button.navbar-toggle.collapsed(type='button', data-target='#site-navbar-collapse', data-toggle='collapse')
      i.fa.fa-navicon
    a.navbar-brand.navbar-brand-center.site-gridmenu-toggle(data-toggle='gridmenu', data-sref='locations')
      img.navbar-brand-logo(src='../../../assets/images/logo.png', title='Remark')
  .navbar-container.container-fluid
    // Navbar Collapse
    #site-navbar-collapse.collapse.navbar-collapse.navbar-collapse-toolbar
      // Navbar Toolbar Right
      ul.nav.navbar-toolbar.navbar-right.navbar-toolbar-right(ng-if='app.isAuthenticated()')
        li(ui-sref-active='active')
          a(ui-sref='dashboard')
            i.fa.fa-location-arrow.fa-1x
            span.location.none.hidden-xs.hidden-sm Dashboard
        li(ui-sref-active='active')
          a(ui-sref='users')
            i.fa.fa-users.fa-1x
            span.users.none.hidden-xs.hidden-sm Users
        li(ui-sref-active='active')
          a(ui-sref='news')
            i.fa.fa-newspaper-o.fa-1x
            span.news.none.hidden-xs.hidden-sm News
        li(ui-sref-active='active')
          a(ui-sref='calendar')
            i.fa.fa-calendar.fa-1x
            span.calendar.none.hidden-xs.hidden-sm Calendar
        li(ui-sref-active='active')
          a(ui-sref='campaigns')
            i.fa.fa-bell.fa-1x
            span.campaign.none.hidden-xs.hidden-sm Campaign
        li(ui-sref-active='active')
          a(ui-sref='bannerList')
            i.fa.fa-industry.fa-1x
            span.campaign.none.hidden-xs.hidden-sm Banner
        li(ui-sref-active='active')
          a(ui-sref='reports')
            i.fa.fa-area-chart.fa-1x
            span.report.none.hidden-xs.hidden-sm Report
        li(ui-sref-active='active')
          a(ui-sref='locations')
            i.fa.fa-map-marker.fa-1x
            span.hotspots.none.hidden-xs.hidden-sm Location
        li.dropdown.navbar-user
          a.navbar-avatar.dropdown-toggle(data-toggle='dropdown', aria-expanded='false', data-animation='scale-up', role='button')
            span.username.hidden-xs.hidden-sm(ng-bind='app.currentUser.email')
            span.avatar.avatar-online
              img(src='../../../assets/images/default_avatar.png', alt='...')
              i
          ul.dropdown-menu()
            li
              a(href='javascript:void(0)')
                i.fa.fa-gears(aria-hidden='true')
                |  Settings
            li.divider(role='presentation')
            li(ng-click='app.logout()')
              a
                i.fa.fa-sign-out(aria-hidden='true')
                |  Logout
      // End Navbar Toolbar Right
    // End Navbar Collapse
