div(ng-show='cam.campaign')
  // Show Location
  .radius-50(ng-show='cam.divLocation', style='position: fixed; width: 40%; background-color: #323232; z-index: 2; margin-left: 30%; margin-top: 5%; padding-top: 10px; padding-bottom: 10px;')
    .col-xs-12
      .input-group
        input.form-control(type='text', style='background: none; color: #ffffff', placeholder='Type in to search Location...', aria-describedby='basic-addon1')
        span#basic-addon1.input-group-addon
          i.fa.fa-search
    .col-xs-12.radius-50(style='height: 120px; overflow-y: auto;')
      label.input_campaign(style='border: none; background: #EBEBEB; font-weight: normal', type='text') Starbucks New World
      label.input_campaign(style='border: none; background: #EBEBEB; font-weight: normal', type='text') Highlands Nguyen Du
    .col-xs-12.radius-50(style='height: 120px; overflow-y: auto; background-color: #4C4C4C')
      p(style='color: #ffffff') Selected
      label.input_campaign(style='border: none; background: #31B0D5; color: #ffffff; font-weight: normal', type='text') Starbucks New World
      label.input_campaign(style='border: none; background: #31B0D5; color: #ffffff; font-weight: normal', type='text') Highlands Nguyen Du
    button.btn.radius-50.btn-sm.btn-default(style='float: right; margin-right: 20px', ng-click='cam.okLocation()') OK
  // End Show Location
  .col-sm-8.col-sm-push-2.padding0.mainCampaign(style='position:absolute; background-color:rgba(192,192,192,0.5); margin: auto; height: 100%')
    .col-xs-4.text-center(style='background-color:rgba(49,176,213,0.7);    margin-left: 20px; border-radius: 0px 0px 10px 10px; height: 25px; line-height: 25px; margin-bottom: 5px; color: #ffffff') Create Ads
    .clearfix
    .col-md-4.hidden-xs.colCampaign(style='background-color: #585858; text-align: left; color: #ffffff; min-height: 450px')
      .clearfix(style='margin: 15px 15px')
      .checkbox
        i#campaign-icon.fa.fa-check-circle(style='font-size: 20px')
        label CAMPAIGN
        br
        label.colorA5 Objective
        .clearfix(style='margin: 15px 15px')
        i#adset-icon.fa.fa-check-circle(style='font-size: 20px')
        label.control-label AD SET
        br
        label.colorA5 Audience
        br
        label.colorA5 Location
        br
        label.colorA5 KPI & Schedule
        .clearfix(style='margin: 15px 15px')
        i#ad-icon.fa.fa-check-circle(style='font-size: 20px')
        label AD
        br
        label.colorA5 Creative
    .col-xs-12.col-md-8.colCampaign(style='background-color: #ffffff; height: 450px; margin: 0px 0px;')
      // Campaign
      #step1(ng-show='cam.showstep1')
        ul.nav.h410(style='overflow: auto')
          //- li
          //-   input#op1(type='radio', name='checkradio', style='display: none', ng-model='cam.option.step1', value='option1')
          //-   label.step1-ot(for='op1')
          //-     i.fa.fa-globe.fa-lg
          //-     |       Send people to website
          //- li
          //-   input#op2(type='radio', name='checkradio', style='display: none', ng-model='cam.option.step1', value='option2')
          //-   label.step1-ot(for='op2')
          //-     i.fa.fa-play-circle-o.fa-lg
          //-     |       Get video views
          //- li
          //-   input#op3(type='radio', name='checkradio', style='display: none', ng-model='cam.option.step1', value='option3')
          //-   label.step1-ot(for='op3')
          //-     i.fa.fa-heartbeat.fa-lg
          //-     |       Get engagement
          //- li
          //-   input#op4(type='radio', name='checkradio', style='display: none', ng-model='cam.option.step1', value='option4')
          //-   label.step1-ot(for='op4')
          //-     i.fa.fa-group.fa-lg
          //-     |       Raise attendance at your event
          //- li
          //-   input#op5(type='radio', name='checkradio', style='display: none', ng-model='cam.option.step1', value='option5')
          //-   label.step1-ot(for='op5')
          //-     i.fa.fa-retweet.fa-lg
          //-     |       Get people to claim your offer
          //- li
          //-   input#op6(type='radio', name='checkradio', style='display: none', ng-model='cam.option.step1', value='option6')
          //-   label.step1-ot(for='op6')
          //-     i.fa.fa-file-text-o.fa-lg
          //-     |       Collect leads for your business
          li(ng-repeat='cc in cam.campaignCategories')
            input(ng-attr-id='{{cc.value}}' ,type='radio', name='checkradio', style='display: none', ng-model='cam.option.step1', value='{{cc.value}}')
            label.step1-ot(for='{{cc.value}}')
              i.fa.fa-play-circle-o.fa-lg
              |       {{cc.text}}
        .col-xs-12(style='height: 40px; line-height: 40px;')
          span(style='float: left') 1/2
          span(style='float: right')
            button#next.btn.radius-50.btn-default.btn-sm(style='width: 150px; margin-right: 0px', ng-click='cam.next1_1()') Next
      .h410(ng-show='cam.showstep1_2')
        label.step1-ot(for='op1', style='background-color: #2A86D1; color: #ffffff')
          i.fa.fa-globe.fa-lg
          |       Get video views
        .col-xs-10.col-xs-push-1(style='background-color: #D2D2D2; padding: 0; margin: 0; border-radius: 5px')
          select.form-control.input-sm
            option(value='') Choose Brand or Enter New Brand
          .col-xs-10.col-xs-push-1
            input(type='radio', name='brand', value='Yomost')
            label(for='')    Yomost
            br
            input(type='radio', name='brand', value='X-men')
            label(for='')    X-men
            br
            input(type='radio', name='brand', value='X-men Boss')
            label(for='')    X-men Boss
      .col-xs-12(style='height: 40px; line-height: 40px;', ng-show='cam.next12')
        span(style='float: left') 2/2
        span(style='float: right')
          button.btn.radius-50.btn-gray.btn-sm(style='', ng-click='cam.back1()') Back
          button.btn.radius-50.btn-default.btn-sm(style='', ng-click='cam.next1_2()') Set Audience & Budget
      // AD Set
      div
        .h410(ng-show='cam.step2', style='overflow: auto')
          .titlestep3(style='') Audiance
          .margin_create_ads
            .col-xs-3.padding0
              span - Age:
            .col-xs-9.padding0
              select.select_create_ads(ng-options='age as age.label for age in cam.ages track by age.id', ng-model='cam.agesfrom')
                // <option></option>
              |               -
              select.select_create_ads(ng-options='age as age.label for age in cam.ages track by age.id', ng-model='cam.agesto')
                option
          .clearfix
          .margin_create_ads
            .col-xs-3.padding0
              span - Gender:
            .col-xs-9.padding0
              ul.nav
                li(style='float: left')
                  input#all_gender(type='radio', name='gender', checked='', style='display: none')
                  label.label_radio_gender(style='', for='all_gender') All
                li(style='float: left')
                  input#men(type='radio', name='gender', style='display: none')
                  label.label_radio_gender(style='', for='men') Men
                li(style='float: left')
                  input#women(type='radio', name='gender', style='display: none')
                  label.label_radio_gender(style='', for='women') Women
          .margin_create_ads
            .col-xs-3.padding0
              span - Device:
            .col-xs-9.padding0
              ul.nav
                li(style='float: left')
                  input#all_device(type='radio', name='device', checked='', style='display: none')
                  label.label_radio_gender(style='', for='all_device') All
                li(style='float: left')
                  input#ios(type='radio', name='device', style='display: none')
                  label.label_radio_gender(style='', for='ios') iOS
                li(style='float: left')
                  input#android(type='radio', name='device', style='display: none')
                  label.label_radio_gender(style='', for='android') Android
                li(style='float: left')
                  input#other(type='radio', name='device', style='display: none')
                  label.label_radio_gender(style='', for='other') Other
          .clear
          .titlestep3 Location
          .margin_create_ads
            .col-xs-3.padding0
              span - City:
            .col-xs-9.padding0
              select.select_location_create_ads
                option(ng-repeat="city in cam.cities", ng-value="city.value"){{city.text}}
          .clearfix
          .margin_create_ads
            .col-xs-3.padding0
              span - Category:
            .col-xs-9.padding0
              select.select_location_create_ads
                option(ng-repeat="lc in cam.locationCategories", ng-value="lc.value"){{lc.text}}
          .clearfix
          .margin_create_ads
            .col-xs-3.padding0
              span - Location:
            .col-xs-9.padding0
              button.select_location_create_ads(ng-click='cam.modalClick()') Click to select
          .clearfix(style='margin-bottom: 5px')
          .titlestep3 KPI & Schedule
          .margin_create_ads
            .col-xs-3.padding0
              span - KPI:
            .col-xs-5.padding0
              input.cusInput(style='padding-left: 10px', type='number', value='1000')
            .col-xs-4
              select#select_category_from.select_location_create_ads
                option Clicks
          .clearfix
          .margin_create_ads
            .col-sm-3.padding0
              span - Schedule:
            .col-sm-9.padding0
              span.col-xs-2.padding0  Start
              .co-xs-4.padding0
                #datetimepicker6.input-group.date
                  input.input_create_ads(style='width:40%; float: left; border-radius: 15px 0px 0px 15px;border: none', type='text')
                  span.input-group-addon(style='float: left; padding: 5px 27px 5px 0px;background-color: #EBEBEB;border-radius: 0px 15px 15px 0px')
                    span.glyphicon.glyphicon-calendar(style='padding: 0px 5px')
                  span(style='margin: 0px 7px 0px 7px; float: left; padding: 3.5px 0px') Time
                  select.select_create_ads(style='width:30%;float: left;', ng-options='time as time.label for time in cam.times track by time.id', ng-model='cam.timeto')
              .clear
              span.col-xs-2.padding0  End
              .co-xs-4.padding0
                #datetimepicker7.input-group.date
                  input.input_create_ads(style='width:40%; float: left; border-radius: 15px 0px 0px 15px;border: none', type='text')
                  span.input-group-addon(style='float: left; padding: 5px 27px 5px 0px;background-color: #EBEBEB;border-radius: 0px 15px 15px 0px')
                    span.glyphicon.glyphicon-calendar(style='padding: 0px 5px')
                  span(style='margin: 0px 7px 0px 7px; float: left; padding: 3.5px 0px') Time
                  select.select_create_ads(style='width:30%;float: left;', ng-options='time as time.label for time in cam.times track by time.id', ng-model='cam.timefrom')
          .clearfix(style='margin: 10px 0px;')
          .titlestep3 Ad Set
          .margin_create_ads
            .col-xs-3.padding0
              span - Name:
            .col-xs-9.padding0
              select#select_city_from.select_location_create_ads
                option Brand_Apr_Name_01
        .col-xs-12(style='height: 40px; line-height: 40px;', ng-show='cam.next21')
          span(style='float: right')
            button.btn.radius-50.btn-gray.btn-sm(style='', ng-click='cam.back2()') Back
            button.btn.radius-50.btn-default.btn-sm(style='', ng-click='cam.next2()') Choose Ad Creative
        // AD
        .h410(ng-show='cam.step3')
          #format
            .row.titlestep3 Format
            .col-xs-6
              .radioFormat
                input#stand(type='radio', name='format', checked='', value='Standard')
                label(for='stand')
                  span
                  | Standard Banner
            .col-xs-6
              .radioFormat
                input#rich(type='radio', name='format', value='Rich')
                label(for='rich')
                  span
                  | Rich Banner
          .clearfix
          #creative
            .row.titlestep3 Creative
            .col-xs-12.margin5
              .col-xs-4 - Mobile
              .col-xs-8
                input(type='text')
            .col-xs-12.margin5
              .col-xs-4 - Desktop
              .col-xs-8
                input(type='text')
          .clearfix
          #tracking
            .row.titlestep3 Tracking Code
            .col-xs-12.margin5
              .col-xs-4 - Mobile
              .col-xs-8
                input.cusInput(type='text')
            .col-xs-12.margin5
              .col-xs-4 - Desktop
              .col-xs-8
                input.cusInput(type='text')
            .col-xs-12.margin5
              .col-xs-4 - Landing page
              .col-xs-8
                input.cusInput(type='text')
        .h410(ng-show='cam.preview', style='overflow: auto')
          .titlestep3 Preview Booking
          .col-xs-12(style='margin: 5px 0px; padding-left: 0px')
            .col-xs-12
              label Campaign:
            span.col-xs-6 - Campaign Name:
            span.col-xs-6.text-italic X-Men Apr
            .clearfix
            span.col-xs-6 - Campaign Objective:
            span.col-xs-6.text-italic Clicks To Website
            .clearfix
            .col-xs-12.padding0(style='margin: 5px 0px; padding-left: 0px')
              label.col-xs-12 Ad Set:
              .col-xs-12
                span.col-xs-4.padding0 - Ad Set Name:
                span.col-xs-8.text-italic VN 171
              .clearfix
              .col-xs-12.padding0
                span.col-xs-4 - Targeting:
                .col-xs-8.padding0
                  span.col-sm-3.padding0 * Location:
                  .col-sm-9.padding0
                    .col-sm-12(style='padding: 5px 5px; overflow: auto; height: 100px; background-color: #B8B8B8; border-radius: 10px 10px;')
                      button.input_campaign(style='border: none; background: #EBEBEB; font-weight: normal', type='text') Hồ Chí Minh
                      button.input_campaign(style='border: none; background: #EBEBEB; font-weight: normal', type='text') Coffee Shops
                      button.input_campaign(style='border: none; background: #EBEBEB; font-weight: normal', type='text') Starbucks New World
                      button.input_campaign(style='border: none; background: #EBEBEB; font-weight: normal', type='text') Starbucks NKKN
                      button.input_campaign(style='border: none; background: #EBEBEB; font-weight: normal', type='text') Starbucks Dong Du
                  .clearfix
                  .col-sm-12.padding0
                    div
                      span.col-xs-4.padding0 * Age:
                      span.col-xs-8.padding0.text-italic 18-65+
                    div
                      span.col-xs-4.padding0 * Gender:
                      span.col-xs-8.padding0.text-italic All
                    div
                      span.col-xs-4.padding0 * KPI:
                      span.col-xs-8.padding0.text-italic 1,000 Clicks
                    div
                      span.col-xs-4.padding0 * Schedule:
                      span.col-xs-8.padding0.text-italic April 21, 2016 - April 28, 2016
                  .clearfix
          .clearfix
          .col-xs-12.padding0
            .col-xs-12
              label Ad:
            .col-xs-12.padding0
              span.col-xs-4 - Ad Name:
              span.col-xs-8.padding0.text-italic X-Men Apr
            .col-xs-12.padding0
              span.col-xs-4 - Landing page:
              span.col-sm-8.padding0.text-italic(style='text-decoration: underline') www.xmen.com.vn
        .col-xs-12(style='height: 40px; line-height: 40px;', ng-show='cam.next31')
          span(style='float: right')
            button.btn.radius-50.btn-sm.btn-gray(style='', ng-click='cam.back3()', ng-show='cam.show3') Back
            button.btn.radius-50.btn-dark.btn-sm(style='', ng-click='cam.prebook()', ng-show='cam.show3') Preview Booking
            button.btn.radius-50.btn-dark.btn-sm(style='', ng-click='cam.editbook()', ng-show='cam.show31') Edit Booking
            button.btn.radius-50.btn-default.btn-sm(style='', ng-click='cam.placebook()') Place Booking
