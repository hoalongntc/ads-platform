{
  "extends": "standard",
  "rules": {
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "no-var": 1,
    "padded-blocks": 0,
    "prefer-arrow-callback": [
      "error",
      {
        "allowNamedFunctions": true
      }
    ],
    "prefer-template": 1,
    "space-before-function-paren": 0,
    "semi": ["error", "always"],
    "eqeqeq": 0
  }
}
